{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "paths": {
      "@cph/db": ["./packages/db/src"],
      "@cph/shared": ["./packages/shared/src"],
      "@cph/api": ["./packages/api/src"],
      "@cph/web": ["./packages/web/src"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
